{
  "id": "io.github.sepehr_rs.LibreSudoku.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "command": "libresudoku",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home",
    "--own-name=io.github.sepehr_rs.LibreSudoku"
  ],
  "modules": [
    {
      "name": "py-sudoku",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=/app --no-warn-script-location py_sudoku-2.0.0-py3-none-any.whl"
      ],
      "sources": [
        {
          "type": "file",
          "path": "sources/py_sudoku-2.0.0-py3-none-any.whl"
        }
      ]
    },
    {
      "name": "libresudoku",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
