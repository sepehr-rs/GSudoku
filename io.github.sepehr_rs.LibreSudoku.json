{
  "app-id": "io.github.sepehr_rs.LibreSudoku",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "command": "libresudoku",
  "finish-args": [
      "--share=network",
      "--share=ipc",
      "--socket=fallback-x11",
      "--device=dri",
      "--socket=wayland"
  ],
  "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/man",
      "/share/doc",
      "/share/gtk-doc",
      "/share/man",
      "/share/pkgconfig",
      "*.la",
      "*.a"
  ],
  "modules": [
      "python3-requirements.json",
      {
          "name": "libresudoku",
          "buildsystem": "meson",
          "builddir": true,
          "sources": [
              {
                  "type": "dir",
                  "path": "."
              }
          ]
      }
  ]
}
