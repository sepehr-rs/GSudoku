{
  "app-id": "io.github.sepehr_rs.LibreSudoku",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "command": "libresudoku",
  "finish-args": [
      "--share=network",
      "--share=ipc",
      "--socket=fallback-x11",
      "--device=dri",
      "--socket=wayland"
  ],
  "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/man",
      "/share/doc",
      "/share/gtk-doc",
      "/share/man",
      "/share/pkgconfig",
      "*.la",
      "*.a"
  ],
  "modules": [
      {
          "name": "py-sudoku",
          "buildsystem": "simple",
          "build-commands": [
              "pip3 install --prefix=/app --no-warn-script-location py_sudoku-2.0.0-py3-none-any.whl"
          ],
          "sources": [
              {
                  "type": "file",
                  "path": "sources/py_sudoku-2.0.0-py3-none-any.whl"
              }
          ]
      },
      {
          "name": "libresudoku",
          "buildsystem": "meson",
          "builddir": true,
          "sources": [
              {
                  "type": "dir",
                  "path": "."
              }
          ]
      }
  ]
}
